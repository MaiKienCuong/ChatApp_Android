<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingEnd="5dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/img_line_friend_request_sent_avt"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:background="@drawable/border_for_circle_image"
        android:padding="1dp"
        android:src="@drawable/defaultprofile">

    </ImageView>

    <TextView
        android:id="@+id/txt_line_friend_request_sent_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/btn_line_friend_request_sent_cancel"
        android:layout_toEndOf="@+id/img_line_friend_request_sent_avt"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="18sp">

    </TextView>

    <Button
        android:id="@+id/btn_line_friend_request_sent_cancel"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:background="@drawable/background_btn_friend_phonebook"
        android:ellipsize="end"
        android:gravity="center_vertical|center_horizontal"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:text="@string/recall_button"
        android:textAlignment="center"
        app:backgroundTint="@color/gray">

    </Button>

    <TextView
        android:id="@+id/txt_line_friend_request_sent_create_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_line_friend_request_sent_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toStartOf="@+id/btn_line_friend_request_sent_cancel"
        android:layout_toEndOf="@+id/img_line_friend_request_sent_avt"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14sp">

    </TextView>

</RelativeLayout>