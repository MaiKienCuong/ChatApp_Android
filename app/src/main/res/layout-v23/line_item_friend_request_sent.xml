<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img_line_friend_request_sent_avt"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:background="@drawable/border_for_circle_image"
        android:padding="1dp"
        android:src="@drawable/defaultprofile">

    </ImageView>

    <TextView
        android:id="@+id/txt_line_friend_request_sent_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/img_line_friend_request_sent_avt"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="18sp">

    </TextView>

    <Button
        android:id="@+id/btn_line_friend_request_sent_cancel"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="@color/red">

    </Button>

    <TextView
        android:id="@+id/txt_line_friend_request_sent_create_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_line_friend_request_sent_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/img_line_friend_request_sent_avt"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14sp">

    </TextView>

</RelativeLayout>