<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:paddingBottom="5dp">


    <ImageView
        android:id="@+id/receiver_sender_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/background_circle_image"
        android:padding="1dp"/>

    <RelativeLayout
        android:id="@+id/receiver_relative_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_toStartOf="@id/receiver_relative_read_one"
        android:layout_toEndOf="@+id/receiver_sender_image">

        <LinearLayout
            android:id="@+id/blank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:background="@drawable/background_message_receiver"
            android:minWidth="50dp"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingTop="0dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp">


            <TextView
                android:id="@+id/receiver_message_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="message content"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/receiver_message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:textSize="12sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/receiver_rcv_reaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/receiver_relative_read_one"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@id/receiver_relative_message"
        android:layout_alignParentEnd="true"
        android:foregroundGravity="bottom"
        android:gravity="bottom"
        android:padding="0dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/receiver_rcv_read_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="bottom"
            android:padding="0dp">

        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>

    <View
        android:id="@+id/receiver_view_center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/receiver_relative_message"
        android:layout_alignEnd="@id/receiver_view_center"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/receiver_relative_read_many"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receiver_relative_message"
        android:layout_alignStart="@+id/receiver_view_center"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/receiver_rcv_read_many"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>

</RelativeLayout>