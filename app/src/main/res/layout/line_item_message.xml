<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/img_lim_avt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/border_for_circle_image"
        android:foregroundGravity="center_vertical"
        android:padding="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_lim_display_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_lim_avt"
        app:layout_constraintEnd_toStartOf="@+id/txt_lim_time_last_message"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/img_lim_avt"
        app:layout_constraintTop_toTopOf="@+id/img_lim_avt"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_lim_last_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:gravity="top"
        android:maxLines="1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_lim_avt"
        app:layout_constraintEnd_toStartOf="@+id/txt_lim_unread_message"
        app:layout_constraintStart_toStartOf="@+id/txt_lim_display_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_lim_display_name"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_lim_time_last_message"
        android:layout_width="65dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical|end"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_lim_display_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_lim_display_name"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_lim_unread_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_unreadmessage"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingTop="3dp"
        android:paddingEnd="8dp"
        android:paddingBottom="3dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txt_lim_last_message"
        app:layout_constraintEnd_toEndOf="@+id/txt_lim_time_last_message"
        app:layout_constraintTop_toTopOf="@+id/txt_lim_last_message"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>