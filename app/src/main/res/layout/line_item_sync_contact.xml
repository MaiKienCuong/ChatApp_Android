<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/img_li_sync_contact_avt"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:background="@drawable/border_for_circle_image"
        android:padding="1dp"></ImageView>
    <TextView
        android:id="@+id/txt_li_sync_contact_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_toEndOf="@id/img_li_sync_contact_avt"
        android:layout_marginTop="0dp"
        android:text="@string/test_text"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        >
    </TextView>
    <TextView
        android:id="@+id/txt_li_sync_contact_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_li_sync_contact_contact_name"
        android:layout_toEndOf="@+id/img_li_sync_contact_avt"
        android:text="@string/test_text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold">
    </TextView>

    <Button
        android:id="@+id/btn_li_sync_contact_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/custom_button"
        android:layout_centerVertical="true"
        android:text="@string/add_button">
    </Button>

</RelativeLayout>