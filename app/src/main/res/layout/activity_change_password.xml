<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.ChangePasswordActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_change_password_activity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="0dp"
        android:background="@color/purple_200"
        app:contentInsetEnd="0dp"
        app:contentInsetEndWithActions="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dark_background"
        android:padding="10dp"
        android:text="@string/change_password_detail_8_char"
        android:textColor="@color/white">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dark_background"
        android:padding="10dp"
        android:text="@string/change_password_detail_not_same_old_password"
        android:textColor="@color/white">

    </TextView>

    <EditText
        android:id="@+id/edt_change_password_old_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="@string/enter_old_password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/black">

    </EditText>

    <EditText
        android:id="@+id/edt_change_password_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="@string/enter_new_password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/black">

    </EditText>

    <EditText
        android:id="@+id/edt_change_password_re_enter_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="@string/re_enter_password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/black">

    </EditText>

    <TextView
        android:id="@+id/txt_change_password_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:textColor="@color/red">

    </TextView>


    <Button
        android:id="@+id/btn_change_password_action"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_btn_friend_phonebook"
        android:gravity="center_vertical|center_horizontal"
        android:maxLines="1"
        android:text="@string/change_password"
        android:textAlignment="center"
        app:backgroundTint="@null">

    </Button>


</LinearLayout>