<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ChangePasswordActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bg_app">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <ImageButton
                android:id="@+id/ibt_change_password"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true">
            </ImageButton>

            <TextView
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/ibt_change_password"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:text="@string/change_password"
                android:textStyle="bold"
                android:textColor="@color/white">
            </TextView>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_password_detail_8_char"
        android:textColor="@color/white"
        android:background="@drawable/dark_background"
        android:padding="10dp">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_password_detail_not_same_old_password"
        android:textColor="@color/white"
        android:background="@drawable/dark_background"
        android:padding="10dp">
    </TextView>

    <EditText
        android:id="@+id/edt_change_password_old_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:hint="@string/enter_old_password"
        android:inputType="textPassword"
        android:layout_marginBottom="10dp"
        >
    </EditText>

    <EditText
        android:id="@+id/edt_change_password_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:hint="@string/enter_new_password"
        android:inputType="textPassword"
        android:layout_marginBottom="10dp"
        >
    </EditText>

    <EditText
        android:id="@+id/edt_change_password_re_enter_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:hint="@string/re_enter_password"
        android:inputType="textPassword"
        android:layout_marginBottom="10dp"
        >
    </EditText>
    <TextView
        android:id="@+id/txt_change_password_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/red"
        android:layout_marginBottom="10dp"
        >
    </TextView>



    <Button
        android:id="@+id/btn_change_password_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_password"
        android:layout_marginTop="10dp"
        android:padding="10dp">
    </Button>




</LinearLayout>