<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.UpdateInformationActivity"
    android:gravity="center_horizontal">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bg_app"
        android:layout_marginTop="0dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/ibt_edit_profile_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:layout_centerVertical="true"
                app:tint="@color/white"></ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/edit_profile"
                android:textSize="20dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/ibt_edit_profile_back"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="@color/white"
                >
            </TextView>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/colorPrimaryDark">
        <ImageView
            android:id="@+id/img_edit_profile_avt"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:src="@drawable/defaultprofile">
        </ImageView>

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/img_edit_profile_avt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorPrimaryDark">

                <EditText
                    android:id="@+id/edt_edit_profile_display_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/edit_profile_display_name"
                    android:drawableRight="@drawable/ic_baseline_edit_24"
                    android:textColor="@color/black">
                </EditText>

                <RadioGroup
                    android:id="@+id/rgr_edit_profile_gender"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:id="@+id/rbt_edit_profile_gender_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="@string/gender_male"
                        android:textSize="20dp"
                        android:textIsSelectable="true">
                    </RadioButton>

                    <RadioButton
                        android:id="@+id/rbt_edit_profile_gender_female"
                        android:layout_marginLeft="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="@string/gender_female">
                    </RadioButton>
                </RadioGroup>
                <EditText
                    android:id="@+id/edt_edit_profile_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableRight="@drawable/ic_baseline_edit_24"
                    android:textColor="@color/black"
                    >
                </EditText>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:id="@+id/txt_edit_profile_title_username"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/username"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center_vertical">
            </TextView>

            <EditText
                android:id="@+id/edt_edit_profile_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toEndOf="@id/txt_edit_profile_title_username"
                android:hint="@string/edit_profile_username"
                android:drawableRight="@drawable/ic_baseline_edit_24">
            </EditText>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_edit_profile_save"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/update_infor"
        android:background="@drawable/custom_button">
    </Button>

</LinearLayout>