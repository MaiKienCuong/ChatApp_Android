<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:paddingStart="4dp"
    android:paddingEnd="4dp">


    <RelativeLayout
        android:id="@+id/send_relative_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_toStartOf="@+id/send_rcv_readby_one">

        <LinearLayout
            android:id="@+id/blank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="6dp"
            android:background="@drawable/background_message_send"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingTop="0dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">


            <TextView
                android:id="@+id/send_message_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/send_message_content_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true" />

            <VideoView
                android:id="@+id/send_message_content_video"
                android:layout_width="wrap_content"
                android:layout_height="0dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/send_message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textSize="12sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/send_rcv_reaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:layoutDirection="rtl"
                    android:textDirection="ltr">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/send_rcv_readby_one"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignBottom="@+id/send_relative_message"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:foregroundGravity="bottom"
        android:gravity="bottom"
        android:padding="0dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/send_rcv_read_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:foregroundGravity="bottom"
            android:padding="0dp">

        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rcv_readby_one_many"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_relative_message"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/send_rcv_read_many"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

</RelativeLayout>