<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingStart="10dp"
    android:paddingTop="4dp"
    android:paddingEnd="5dp"
    android:paddingBottom="4dp">

    <ImageView
        android:id="@+id/img_line_friend_request_avt"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:background="@drawable/border_for_circle_image"
        android:padding="1dp"
        android:src="@drawable/defaultprofile">

    </ImageView>

    <LinearLayout
        android:id="@+id/item_friend_received_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/img_line_friend_request_avt"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_line_friend_request_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="top"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="18sp">

        </TextView>

        <TextView
            android:id="@+id/txt_line_friend_request_create_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:textSize="14sp">

        </TextView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/item_friend_received_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_friend_received_text"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/img_line_friend_request_avt"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_line_friend_request_accept"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:minWidth="120dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:text="@string/accept_button"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:backgroundTint="@color/purple_200"
            app:cornerRadius="16dp"
            app:iconGravity="textStart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_line_friend_request_cancel"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:minWidth="120dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:text="@string/delete"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:backgroundTint="@color/gray"
            app:cornerRadius="16dp"
            app:iconGravity="textStart" />

    </LinearLayout>

</RelativeLayout>