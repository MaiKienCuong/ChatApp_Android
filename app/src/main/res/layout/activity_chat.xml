<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".ui.ChatActivity">

    <Toolbar
        android:id="@+id/tlb_chat"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="0dp"
        android:background="@color/bg_app"
        tools:targetApi="lollipop">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/ibt_chat_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/img_chat_user_avt"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/ibt_chat_back"
                android:background="@drawable/background_circle_image"
                android:padding="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/defaultprofile" />

            <TextView
                android:id="@+id/txt_chat_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/img_chat_user_avt"
                android:text="Display Name"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold">

            </TextView>

            <ImageButton
                android:id="@+id/btn_room_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="@null"
                app:srcCompat="@drawable/ic_menu" />

        </RelativeLayout>
    </Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_chat_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/type_message_layout"
        android:layout_below="@+id/tlb_chat">

    </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/type_message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_chat_message_send"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="start"
            android:layout_marginStart="5dp"
            android:layout_toStartOf="@+id/ibt_chat_send_media"
            android:background="@drawable/message_background"
            android:hint="Type a message"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="18sp">

        </EditText>

        <ImageButton
            android:id="@+id/ibt_chat_send_media"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"
            android:layout_toStartOf="@+id/ibt_chat_send_message"
            android:background="@drawable/ic_menu"
            android:foregroundGravity="center_vertical|center_horizontal" />

        <ImageButton
            android:id="@+id/ibt_chat_send_message"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/custom_button_circle">

        </ImageButton>


    </RelativeLayout>

    <Button
        android:id="@+id/btn_scroll_to_bottom"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/rcv_chat_list"
        android:layout_centerInParent="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_button_circle"
        android:rotation="90"
        android:visibility="gone"
        app:backgroundTint="@null" />


</RelativeLayout>