<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.signup.frag.SignupEnterEmailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="757dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_sign_up_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_sign_up_check_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_sign_up_confirm_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_btn_friend_phonebook"
            android:gravity="center_vertical|center_horizontal"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/confirm_button"
            android:textAlignment="center"
            app:backgroundTint="@null" />

        <TextView
            android:id="@+id/txt_sign_up_vetify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingTop="20dp"
            android:text="@string/enter_confirmation"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edt_sign_up_verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="@string/type_verification_code"
            android:inputType="number" />

        <TextView
            android:id="@+id/txt_sign_up_check_vetification_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_sign_up_confirm_vetify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_btn_friend_phonebook"
            android:gravity="center_vertical|center_horizontal"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/confirm_button"
            android:textAlignment="center"
            app:backgroundTint="@null" />

    </LinearLayout>
</FrameLayout>