<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.signup.SignupEnterEmailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="757dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/edt_sign_up_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textPersonName"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txt_sign_up_check_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_sign_up_confirm_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:background="@drawable/custom_button"
            android:backgroundTint="@color/bg_app"
            android:text="@string/confirm_button"
            app:backgroundTint="@null" />

        <TextView
            android:id="@+id/txt_sign_up_vetify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_confirmation"
            android:textSize="18dp"
            android:paddingTop="20dp"
            android:layout_margin="10dp"
            />

        <EditText
            android:id="@+id/edt_sign_up_verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/txt_sign_up_check_vetification_code"
            android:layout_margin="10dp"
            android:textSize="18dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />

        <Button
            android:id="@+id/btn_sign_up_confirm_vetify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:background="@drawable/custom_button"
            android:backgroundTint="@color/bg_app"
            android:text="@string/confirm_button"
            app:backgroundTint="@null" />

    </LinearLayout>
</FrameLayout>