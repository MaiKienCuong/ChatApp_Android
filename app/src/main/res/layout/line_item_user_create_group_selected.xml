<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="5dp"
    android:layout_centerVertical="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_create_group_selected_user_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/border_for_circle_image"
        android:padding="1dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/item_create_group_selected_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/item_create_group_selected_user_img"
        android:layout_alignEnd="@+id/item_create_group_selected_user_img"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="-5dp"
        android:background="@drawable/ic_baseline_close_circle_24_white" />

</RelativeLayout>