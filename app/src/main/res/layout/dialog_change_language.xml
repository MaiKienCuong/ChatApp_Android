<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray">
        <TextView
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_language"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textStyle="bold"
            android:textAlignment="center">
        </TextView>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/black">
            <TextView
                android:id="@+id/txt_change_language_english"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/language_english"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/united_kingdom"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:drawableRight="@drawable/ic_baseline_radio_button_unchecked_24">

            </TextView>

            <TextView
                android:id="@+id/txt_change_language_vietnamese"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/language_vietnamese"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/vietnam"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:drawableRight="@drawable/ic_baseline_radio_button_unchecked_24">

            </TextView>
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>