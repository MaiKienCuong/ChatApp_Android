<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ViewInformationActivity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageButton
            android:id="@+id/ibt_update_infor_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/white">
        </ImageButton>

        <ImageView
            android:id="@+id/img_update_infor_avt"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_circle_image"
            tools:srcCompat="@tools:sample/avatars"
            >
        </ImageView>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_update_infor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
           android:gravity="center_horizontal">
            <ListView
                android:id="@+id/lsv_update_infor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>

            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/btn_update_infor"
                android:text="@string/update_infor"
                android:background="@drawable/custom_button"
                android:backgroundTint="@color/color_send"
                android:layout_width="wrap_content"
                android:layout_height="60dp">
            </Button>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>